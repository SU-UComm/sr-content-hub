{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "checkJs": false,
        "jsx": "react",
        "baseUrl": "./",
        "paths": {
            "src/*": [
                "src/*"
            ],
            "modules/*": [
                "src/modules/*"
            ]
        }
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules",
        "build",
        "dist"
    ]
}
